<script>
function showCorrectNavbar() {
    var w = window.innerWidth;
    document.querySelectorAll('.desktop-navbar, .tablet-navbar, .mobile-navbar').forEach(function(el) {
        el.style.display = 'none';
    });
    if (w <= 900) {
        document.querySelectorAll('.mobile-navbar').forEach(function(el) { el.style.display = 'block'; });
    } else if (w <= 1200) {
        document.querySelectorAll('.tablet-navbar').forEach(function(el) { el.style.display = 'block'; });
    } else {
        document.querySelectorAll('.desktop-navbar').forEach(function(el) { el.style.display = 'block'; });
    }
}
window.addEventListener('DOMContentLoaded', showCorrectNavbar);
window.addEventListener('resize', showCorrectNavbar);
</script>


